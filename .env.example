# AWS Problem Solver Game - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# =============================================================================
# Project Configuration
# =============================================================================
PROJECT_NAME=aws-problem-solver-game
ENVIRONMENT=dev

# =============================================================================
# Domain Configuration (Fill these with your actual domains)
# =============================================================================
# Your custom domain (optional, will use CloudFront domain if not set)
CUSTOM_DOMAIN=
# Example: CUSTOM_DOMAIN=aws-game.yourdomain.com

# Subdomain for dev environment
DEV_SUBDOMAIN=dev-aws-game
# Example: DEV_SUBDOMAIN=dev-aws-game (results in dev-aws-game.yourdomain.com)

# =============================================================================
# S3 Bucket Configuration
# =============================================================================
# S3 bucket names will be auto-generated as: {PROJECT_NAME}-{ENVIRONMENT}-{AWS_ACCOUNT_ID}
# You don't need to set these manually

# =============================================================================
# API Configuration
# =============================================================================
# API Gateway will be auto-created, URLs will be generated after deployment

# =============================================================================
# Amazon Q CLI Configuration (Optional)
# =============================================================================
# Set to 'true' if you have Amazon Q CLI installed and configured
AMAZON_Q_ENABLED=false

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Enable enhanced monitoring (additional costs may apply)
ENHANCED_MONITORING=false

# Enable X-Ray tracing for production
XRAY_TRACING=false

# =============================================================================
# Security Configuration
# =============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# Enable WAF for production (additional costs apply)
WAF_ENABLED=false

# =============================================================================
# Notification Configuration (Optional)
# =============================================================================
# Email for deployment notifications
NOTIFICATION_EMAIL=

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# =============================================================================
# Development Configuration
# =============================================================================
# Local development server port
DEV_SERVER_PORT=8000

# Enable debug mode
DEBUG_MODE=true
